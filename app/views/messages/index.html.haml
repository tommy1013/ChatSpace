.contents.clearfix
  = render 'shared/side', locals: { groups: @groups }
  .main
    .chat-header.papa
      .chat-header__left
        %h1.chat-header__left__title SAMPLEグループ
        .chat-header__left__sub_sample 12px #999999
      .chat-header__right
        =link_to edit_group_path(@group), class: "header_box2" do
          =image_tag("edit.gif")

    .main_center.papa
      - @messages.each do |message|
        .main_center__box1
          %p
            %span.user_name ryosukemaehira
            %span.time
              = message.created_at
            .reply
              = message.body
            .image
              = image_tag message.image.to_s

    .main_bottom.papa
      = form_for ([@group,@message]) do |f|
        =f.text_field :body, class: "main_bottom__message-box", placeholder: "type a message"
        .main_bottom__message-box__icon
          =f.label :image, class: 'fa fa-picture-o' do
            =f.file_field :image, class: "bottom_icon", id: 'message_image'
        .main_bottom__sent-button
          =f.submit "sent"
